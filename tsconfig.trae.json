{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "module": "ES2022", 
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["svelte", "vite/client", "node"],
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$components": ["./src/lib/components"],
      "$components/*": ["./src/lib/components/*"],
      "$stores": ["./src/lib/stores"],
      "$stores/*": ["./src/lib/stores/*"],
      "$services": ["./src/lib/services"],
      "$services/*": ["./src/lib/services/*"],
      "$utils": ["./src/lib/utils"],
      "$utils/*": ["./src/lib/utils/*"],
      "$types": ["./src/lib/types"],
      "$types/*": ["./src/lib/types/*"],
      "$app/*": ["./.svelte-kit/runtime/app/*"],
      "$env/static/private": ["./.svelte-kit/ambient.d.ts"],
      "$env/static/public": ["./.svelte-kit/ambient.d.ts"],
      "$env/dynamic/private": ["./.svelte-kit/ambient.d.ts"],
      "$env/dynamic/public": ["./.svelte-kit/ambient.d.ts"]
    },
    "rootDirs": [".", "./.svelte-kit/types"]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "src/env.d.ts",
    "src/app.d.ts",
    "svelte.config.js",
    "vite.config.ts",
    "eslint.config.ts",
    ".svelte-kit/ambient.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.min.js",
    ".svelte-kit/generated",
    ".svelte-kit/runtime"
  ]
}