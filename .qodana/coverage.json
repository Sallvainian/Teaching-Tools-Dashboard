{
  "version": "1.0",
  "coverage": {
    "enabled": true,
    "thresholds": {
      "total": 70,
      "newCode": 80
    },
    "reportPaths": [
      "coverage/lcov.info",
      "coverage/coverage-final.json"
    ],
    "excludePaths": [
      "**/*.test.ts",
      "**/*.test.js",
      "**/*.spec.ts",
      "**/*.spec.js",
      "**/test/**",
      "**/tests/**",
      "**/__tests__/**",
      "**/node_modules/**",
      "**/.svelte-kit/**",
      "**/build/**",
      "**/dist/**",
      "**/*.config.ts",
      "**/*.config.js",
      "**/vitest.config.ts",
      "**/vite.config.ts",
      "**/postcss.config.ts",
      "**/tailwind.config.ts"
    ],
    "includeOnlyProjectFiles": true
  }
}