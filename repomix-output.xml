  import { page } from '$app/stores';
  
  // Redirect if already authenticated
  $effect(() => {
    if ($authStore.isAuthenticated) {
      const role = $authStore.role;
      const redirectTo = role === 'student' ? '/student/dashboard' : '/dashboard';
      goto(redirectTo);
