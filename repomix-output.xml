    {#if error}
      <div class="bg-error/20 text-error px-4 py-3 rounded mb-4" role="alert">
        <p>{error}</p>
        
        {#if showResendConfirmation}
          <div class="mt-3">
            <p class="text-sm mb-2">This email is already registered but hasn't been confirmed.</p>
            <button
