      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });
  }
  
  function simulateUpload() {
    if (isUploading) return;
    
    isUploading = true;
    uploadProgress = 0;
    
    const interval = setInterval(() => {
